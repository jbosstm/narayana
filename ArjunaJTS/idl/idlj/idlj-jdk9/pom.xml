                                            <arg value="${project.build.directory}/generated-sources/idl"/>
                                            <arg value="-pkgPrefix"/>
                                            <arg value="CosTransactions"/>
                                            <arg value="org.omg"/>
                                            <arg value="-pkgPrefix"/>
                                            <arg value="XA"/>
                                            <arg value="org.omg"/>
                                            <arg value="-pkgPrefix"/>
                                            <arg value="ArjunaOTS"/>
                                            <arg value="com.arjuna"/>
