	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<forkMode>once</forkMode>
					<workingDirectory>target/test-classes</workingDirectory>
					<environmentVariables>
						<PATH>${path}</PATH>
						<LD_LIBRARY_PATH>${ld_library_path}</LD_LIBRARY_PATH>
						<BLACKTIE_CONFIGURATION_DIR>${blacktie.configuration.dir}</BLACKTIE_CONFIGURATION_DIR>
						<BLACKTIE_SCHEMA_DIR>${project.build.directory}/cxx/test/</BLACKTIE_SCHEMA_DIR>
						<JBOSSAS_IP_ADDR>${jbossas.ip.addr}</JBOSSAS_IP_ADDR>
					</environmentVariables>
					<systemProperties>
						<property>
							<name>TEST_REPORTS_DIR</name>
							<value>${test.reports.dir}</value>
						</property>
						<property>
							<name>CLIENT_SERVER_EXE</name>
							<value>${project.build.directory}/cs</value>
						</property>
						<property>
							<name>PATH</name>
							<value>${path}</value>
						</property>
						<property>
							<name>LD_LIBRARY_PATH</name>
							<value>${ld_library_path}</value>
						</property>
						<property>
							<name>BLACKTIE_CONFIGURATION_DIR</name>
							<value>${blacktie.configuration.dir}</value>
						</property>
						<property>
							<name>BLACKTIE_SCHEMA_DIR</name>
							<value>${project.build.directory}/cxx/test</value>
						</property>
						<property>
							<name>JBOSSAS_IP_ADDR</name>
							<value>${jbossas.ip.addr}</value>
						</property>
						<property>
							<name>USE_VALGRIND</name>
							<value>${use.valgrind}</value>
						</property>
					</systemProperties>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.jboss.narayana.blacktie.plugins</groupId>
				<artifactId>blacktie-cpp-plugin</artifactId>
				<configuration>
					<src.main.file>cs</src.main.file>
				</configuration>
				<executions>
					<execution>
						<id>generate-exe</id>
						<phase>test-compile</phase>
						<goals>
							<goal>generate-exe</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings 
					only. It has no influence on the Maven build itself. -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.apache.maven.plugins
										</groupId>
										<artifactId>
											maven-dependency-plugin
										</artifactId>
										<versionRange>
											[2.1,)
										</versionRange>
										<goals>
											<goal>
												unpack-dependencies
											</goal>
											<goal>
												copy-dependencies
											</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.apache.maven.plugins
										</groupId>
										<artifactId>
											maven-antrun-plugin
										</artifactId>
										<versionRange>
											[1.3,)
										</versionRange>
										<goals>
											<goal>run</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.jboss.narayana.blacktie.plugins
										</groupId>
										<artifactId>
											blacktie-cpp-plugin
										</artifactId>
										<versionRange>
											[5.9.1.Final-SNAPSHOT,)
										</versionRange>
										<goals>
											<goal>process-classes</goal>
											<goal>test-compile</goal>
											<goal>generate-exe</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.jboss.narayana.blacktie</groupId>
			<classifier>${bpa}</classifier>
			<artifactId>blacktie-xatmi</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.jboss.narayana.blacktie</groupId>
			<classifier>${bpa}</classifier>
			<artifactId>blacktie-nbf</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.jboss.narayana.blacktie</groupId>
			<artifactId>blacktie-jatmibroker-xatmi</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.jboss.narayana.blacktie</groupId>
			<artifactId>blacktie-jatmibroker-nbf</artifactId>
			<scope>test</scope>
		</dependency>
        <dependency>
            <groupId>org.jboss.spec.javax.transaction</groupId>
            <artifactId>jboss-transaction-api_1.1_spec</artifactId>
            <scope>provided</scope>
        </dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.jboss.narayana.blacktie</groupId>
			<artifactId>blacktie-admin-services</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
            <dependency>
                <groupId>apr-1.contrib</groupId>
                <classifier>${bpa}</classifier>
                <artifactId>apr-1</artifactId>
			<scope>test</scope>
            </dependency>
	</dependencies>
	<properties>
		<test.output.type>shared</test.output.type>
		<test.excludes>**/cs.cxx</test.excludes>
		<test.reports.dir>${project.build.directory}/surefire-reports</test.reports.dir>
	</properties>

        <profiles>
          <profile>
            <id>not-j9</id>
            <activation>
              <jdk>[1.3,1.9)</jdk>
            </activation>
            <dependencies>
              <dependency>
                <groupId>org.jboss.narayana.jts</groupId>
                <artifactId>narayana-jts-jacorb</artifactId>
                <scope>test</scope>
              </dependency>
              <dependency>
                <groupId>jacorb</groupId>
                <artifactId>jacorb</artifactId>
                <scope>test</scope>
              </dependency>
            </dependencies>
          </profile>
          <profile>
            <id>j9</id>
            <activation>
                <jdk>[1.9,)</jdk>
            </activation>
            <dependencies>
               <dependency>
                    <groupId>org.jboss.narayana.jts</groupId>
                    <artifactId>narayana-jts-idlj</artifactId>
                    <scope>test</scope>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>2.10</version>
                        <executions>
                            <execution>
                                <id>copy-dependencies</id>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>org.jboss.narayana.jts</groupId>
                                            <artifactId>${java.corba.patch.name}</artifactId>
                                            <version>${project.version}</version>
                                            <type>${project.packaging}</type>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>org.jboss.narayana.jta</groupId>
                                            <artifactId>narayana-jta-j9-module</artifactId>
                                            <version>${project.version}</version>
                                            <type>jar</type>
                                            <outputDirectory>${project.build.directory}/upgrademodulepath</outputDirectory>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
            <properties>
                <java.corba.patch.name>idlj.java.corba.patch</java.corba.patch.name>
                <java.corba.patch.jar>${project.build.directory}/dependency/${java.corba.patch}-${project.version}.jar</java.corba.patch.jar>
                <jvm.args.jdk9>--add-modules java.corba --patch-module java.corba=${java.corba.patch.jar} --upgrade-module-path ${project.build.directory}/upgrademodulepath</jvm.args.jdk9>
                <test.reports.dir>${project.build.directory}/surefire-j9-reports</test.reports.dir>
            </properties>
          </profile>
        </profiles>
</project>
