<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.jboss.narayana.blacktie</groupId>
        <artifactId>blacktie-common</artifactId>
        <version>5.9.1.Final-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>blacktie-C</artifactId>
    <packaging>pom</packaging>
    <name>Blacktie C Defaults and Dependencies</name>
    <description>A BlackTie component</description>
    <developers>
        <developer>
            <id>tjenkinson</id>
            <name>Thomas Jenkinson</name>
            <email>tom.jenkinson@redhat.com</email>
            <organization>JBoss</organization>
            <organizationUrl>http://www.jboss.org/</organizationUrl>
            <roles>
                <role>Project Lead</role>
            </roles>
            <timezone>0</timezone>
        </developer>
        <developer>
            <id>mmusgrov</id>
            <name>Michael Musgrove</name>
            <email>mmusgrov@redhat.com</email>
            <organization>JBoss</organization>
            <organizationUrl>http://www.jboss.org/</organizationUrl>
            <roles>
                <role>Core Developer</role>
            </roles>
            <timezone>0</timezone>
        </developer>
        <developer>
            <id>zfeng</id>
            <name>Amos Feng</name>
            <email>zfeng@redhat.com</email>
            <organization>JBoss</organization>
            <organizationUrl>http://www.jboss.org/</organizationUrl>
            <roles>
                <role>Core Developer</role>
            </roles>
            <timezone>0</timezone>
        </developer>
    </developers>
    <licenses>
        <license>
            <name>LGPL 2.1</name>
            <url>http://www.gnu.org/licenses/lgpl-2.1.html</url>
        </license>
    </licenses>
    <build>
        <plugins>
            <plugin>
                <inherited>true</inherited>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <executions>
                    <execution>
                        <id>enforce-property</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireProperty>
                                    <property>bpa</property>
                                    <message>"You must specify a platform and architecture!"</message>
                                </requireProperty>
                            </rules>
                            <fail>true</fail>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <inherited>true</inherited>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-test-dependencies</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <excludeScope>runtime</excludeScope>
                            <includes>**/*</includes>
                            <markersDirectory>${project.build.directory}/cxx/test-markers</markersDirectory>
                            <outputDirectory>${project.build.directory}/cxx/test</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteIfNewer>false</overWriteIfNewer>
                            <overWriteSnapshots>true</overWriteSnapshots>
                            <excludeTypes>${exclude_unpack_type}</excludeTypes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>unpack-runtime-dependencies</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeScope>runtime</includeScope>
                            <excludes>include/**</excludes>
                            <markersDirectory>${project.build.directory}/cxx/runtime-markers</markersDirectory>
                            <outputDirectory>${project.build.directory}/cxx/runtime</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteIfNewer>false</overWriteIfNewer>
                            <overWriteSnapshots>true</overWriteSnapshots>
                            <excludeTypes>${exclude_unpack_type}</excludeTypes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>unpack-compile-dependencies</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeScope>compile</includeScope>
                            <includes>**/*</includes>
                            <markersDirectory>${project.build.directory}/cxx/compile-markers</markersDirectory>
                            <outputDirectory>${project.build.directory}/cxx/compile</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteIfNewer>false</overWriteIfNewer>
                            <overWriteSnapshots>true</overWriteSnapshots>
                            <excludeTypes>${exclude_unpack_type}</excludeTypes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <inherited>true</inherited>
                <groupId>org.jboss.narayana.blacktie.plugins</groupId>
                <artifactId>blacktie-cpp-plugin</artifactId>
                <version>${project.version}</version>
                <configuration>
                    <configuration.type>${configuration.type}</configuration.type>
                    <maven.test.skip>${maven.test.skip}</maven.test.skip>
                    <skipTests>${skipTests}</skipTests>
                    <src.main>${src.main}</src.main>
                    <failOnErrorTests>${failOnErrorTests}</failOnErrorTests>
                    <generate.testrunner>${generate.testrunner}</generate.testrunner>
                    <export.dll>${export.dll}</export.dll>
                    <blacktie.configuration.dir>${blacktie.configuration.dir}</blacktie.configuration.dir>
                    <jbossas.ip.addr>${jbossas.ip.addr}</jbossas.ip.addr>
                    <test.includes>${test.includes}</test.includes>
                    <test.excludes>${test.excludes}</test.excludes>
                    <use.valgrind>${use.valgrind}</use.valgrind>
                </configuration>
                <executions>
                    <execution>
                        <id>generate-sources</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate-idl-sources</goal>
                            <goal>generate-proto-sources</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>compile</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>test-compile</id>
                        <phase>test-compile</phase>
                        <goals>
                            <goal>test-compile</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>test</id>
                        <phase>test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>process-classes</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>process-classes</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <id>jar-with-classifier</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                            <classifier>${bpa}</classifier>
                            <forceCreation>true</forceCreation>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <pluginManagement>
        	<plugins>
        		<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
        		<plugin>
        			<groupId>org.eclipse.m2e</groupId>
        			<artifactId>lifecycle-mapping</artifactId>
        			<version>1.0.0</version>
        			<configuration>
        				<lifecycleMappingMetadata>
        					<pluginExecutions>
        						<pluginExecution>
        							<pluginExecutionFilter>
        								<groupId>
        									org.apache.maven.plugins
        								</groupId>
        								<artifactId>
        									maven-dependency-plugin
        								</artifactId>
        								<versionRange>
        									[2.1,)
        								</versionRange>
        								<goals>
        									<goal>
        										unpack-dependencies
        									</goal>
        									<goal>
        										copy-dependencies
        									</goal>
        								</goals>
        							</pluginExecutionFilter>
        							<action>
        								<ignore></ignore>
        							</action>
        						</pluginExecution>
        						<pluginExecution>
        							<pluginExecutionFilter>
        								<groupId>
        									org.jboss.narayana.blacktie.plugins
        								</groupId>
        								<artifactId>
        									blacktie-cpp-plugin
        								</artifactId>
        								<versionRange>
        									[5.9.1.Final-SNAPSHOT,)
        								</versionRange>
        								<goals>
        									<goal>test-compile</goal>
        									<goal>
        										generate-idl-sources
        									</goal>
        									<goal>compile</goal>
        									<goal>
        										generate-proto-sources
        									</goal>
        									<goal>
        										generate-test-lib
        									</goal>
        									<goal>process-classes</goal>
        								</goals>
        							</pluginExecutionFilter>
        							<action>
        								<ignore></ignore>
        							</action>
        						</pluginExecution>
        						<pluginExecution>
        							<pluginExecutionFilter>
        								<groupId>
        									org.apache.maven.plugins
        								</groupId>
        								<artifactId>
        									maven-antrun-plugin
        								</artifactId>
        								<versionRange>
        									[1.3,)
        								</versionRange>
        								<goals>
        									<goal>run</goal>
        								</goals>
        							</pluginExecutionFilter>
        							<action>
        								<ignore></ignore>
        							</action>
        						</pluginExecution>
        					</pluginExecutions>
        				</lifecycleMappingMetadata>
        			</configuration>
        		</plugin>
        	</plugins>
        </pluginManagement>
    </build>
    <profiles>
        <profile>
            <id>windows</id>
            <activation>
                <os>
                    <family>windows</family>
                </os>
            </activation>
            <properties>
                <use.valgrind>false</use.valgrind>
	        <test.includes>*</test.includes>
            </properties>
        </profile>
        <profile>
            <id>linux</id>
            <activation>
                <os>
                    <family>unix</family>
                </os>
            </activation>
            <properties>
                <use.valgrind>true</use.valgrind>
	        <test.includes>*</test.includes>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <inherited>true</inherited>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-test-dependencies</id>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>copy-dependencies</goal>
                                </goals>
                                <configuration>
                                    <excludeScope>runtime</excludeScope>
                                    <outputDirectory>${project.build.directory}/test-dependencies</outputDirectory>
                                    <overWriteReleases>true</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                    <overWriteIfNewer>false</overWriteIfNewer>
                                    <includeTypes>zip</includeTypes>
                                </configuration>
                            </execution>
                            <execution>
                                <id>copy-runtime-dependencies</id>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>copy-dependencies</goal>
                                </goals>
                                <configuration>
                                    <includeScope>runtime</includeScope>
                                    <outputDirectory>${project.build.directory}/runtime-dependencies</outputDirectory>
                                    <overWriteReleases>true</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                    <overWriteIfNewer>false</overWriteIfNewer>
                                    <includeTypes>zip</includeTypes>
                                </configuration>
                            </execution>
                            <execution>
                                <id>copy-compile-dependencies</id>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>copy-dependencies</goal>
                                </goals>
                                <configuration>
                                    <includeScope>compile</includeScope>
                                    <outputDirectory>${project.build.directory}/compile-dependencies</outputDirectory>
                                    <overWriteReleases>true</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                    <overWriteIfNewer>false</overWriteIfNewer>
                                    <includeTypes>zip</includeTypes>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>unzip</id>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <tasks>
                                        <echo message="unzip dependencies to test"/>
                                        <exec executable="find">
                                            <arg line="${project.build.directory}/test-dependencies -name '*.zip' -exec unzip -q -uo '{}' -d ${project.build.directory}/cxx/test ;"/>
                                        </exec>
                                        <echo message="unzip dependencies to runtime"/>
                                        <exec executable="find">
                                            <arg line="${project.build.directory}/runtime-dependencies -name '*.zip' -exec unzip -q -uo '{}' -x include/* -d ${project.build.directory}/cxx/runtime ;"/>
                                        </exec>
                                        <echo message="unzip dependencies to compile"/>
                                        <exec executable="find">
                                            <arg line="${project.build.directory}/compile-dependencies -name '*.zip' -exec unzip -q -uo '{}' -d ${project.build.directory}/cxx/compile ;"/>
                                        </exec>
                                    </tasks>
                                </configuration>
                            </execution>
                            <execution>
                                <id>rename libapr-1.so</id>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <tasks>
                                        <echo message="rename libapr-1.so"/>
                                        <exec executable="find">
                                            <arg line="${project.build.directory} -name lib -type d -exec sh -c &quot; cd '{}' &amp;&amp; mv libapr-1.so libapr-1.so.0 &amp;&amp; ln -s libapr-1.so.0 libapr-1.so &quot; ;"/>
                                        </exec>
                                    </tasks>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
    <dependencies>
        <dependency>
            <groupId>apache-log4cxx.contrib</groupId>
            <classifier>${bpa}</classifier>
            <artifactId>log4cxx</artifactId>
            <version>902683</version>
        </dependency>
    </dependencies>
</project>
