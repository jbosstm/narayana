			<jar name="$(PRODUCT.DIR)/lib/ext/*.jar"/>
			<jar name="$(PRODUCT.DIR)/lib/ext/*.zip"/>

			<jar name="$(PRODUCT.DIR)/qa/lib/*.jar"/>

			<jar name="$(DTF_HOME)/lib/ext/fscontext.jar"/>
			<jar name="$(DTF_HOME)/lib/ext/providerutil.jar"/>

