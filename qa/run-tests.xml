    <junit-tests tests="crashrecovery11-oracle_jndi"/>
    <!--mssql needs different .jar for jdk 1.5 vs. 1.6 runtime -->
    <condition property="mssql.driver" value="sqljdbc4.jar">
      <equals arg1="${java.specification.version}" arg2="1.6"/>
