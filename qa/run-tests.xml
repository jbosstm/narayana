        <!-- rawresources02_2 : 147 tests, 7 minutes -->
        <junit-tests tests="rawresources02_2"/>
        <!-- rawresources02_2 : 147 tests, 6 minutes -->
        <junit-tests tests="rawresources02_2b"/>
