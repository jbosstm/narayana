    <sequential>
      <delete dir="dbdrivers/selected_dbdriver"/>
      <mkdir dir="dbdrivers/selected_dbdriver"/>
      <copy todir="dbdrivers/selected_dbdriver" flatten="true">
        <fileset dir="dbdrivers/" includes="**/@{files}"/>
      </copy>
    </sequential>
  </macrodef>
